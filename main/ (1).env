# Softmax分类器项目配置文件
# 项目名称和版本
PROJECT_NAME=Softmax分类器
PROJECT_VERSION=1.0.0

# Python环境配置
PYTHON_VERSION=3.13
VENV_PATH=./venv

# 模型配置 - 原始版本 (批量梯度下降)
SIMPLE_MODEL_LEARNING_RATE=0.5
SIMPLE_MODEL_N_ITERATIONS=500
SIMPLE_MODEL_REG_LAMBDA=0.01

# 模型配置 - 优化版本 (Adam + 早停)
OPTIMIZED_MODEL_LEARNING_RATE=0.01
OPTIMIZED_MODEL_N_ITERATIONS=1000
OPTIMIZED_MODEL_BATCH_SIZE=32
OPTIMIZED_MODEL_OPTIMIZER=adam
OPTIMIZED_MODEL_EARLY_STOPPING=True
OPTIMIZED_MODEL_PATIENCE=10
OPTIMIZED_MODEL_REG_LAMBDA=0.01

# 数据配置
RANDOM_SEED=42
TEST_SIZE=0.2
VALIDATION_SIZE=0.2

# 数据集大小配置
DATASET_N_SAMPLES=2000
DATASET_N_FEATURES=30
DATASET_N_CLASSES=5
DATASET_NOISE_LEVEL=0.4

# 对比测试配置
COMPARISON_VERBOSE=True
COMPARISON_SAVE_REPORT=True
REPORT_PATH=./性能对比分析报告.md

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/softmax.log

# 高级选项
USE_CUDA=False
DEBUG_MODE=False
